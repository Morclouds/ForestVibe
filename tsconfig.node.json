{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],                        // ✅ Add DOM for global types
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "node",                      // ✅ Fix Vite errors
    "esModuleInterop": true,                         // ✅ Required for Vite
    "allowSyntheticDefaultImports": true,            // ✅ Also required

    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}

